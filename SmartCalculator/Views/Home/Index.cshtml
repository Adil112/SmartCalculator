@model SmartCalculator.Models.CalculatorInfo
@{
    ViewData["Title"] = "Home Page";
}
<a asp-action="GetData" asp-controller="Home">Отчет</a>
<form asp-action="Index">

    <div class="text-center">
        <h1 class="display-4">Умный калькулятор</h1>

        <p><label>Первая цифра</label></p>
        <p><input type="number" asp-for="num1" /></p>

        <p><label>Вторая цифра</label></p>
        <p><input type="number" asp-for="num2" /></p>          
        
        <p><input type="submit" value="@Operation.Сложение" asp-for="oper" /></p>
        <p><input type="submit" value="@Operation.Вычитание" asp-for="oper" /></p>
        <p><input type="submit" value="@Operation.Умножение" asp-for="oper" /></p>
        <p><input type="submit" value="@Operation.Деление" asp-for="oper" /></p>

        <p><label>Результат</label></p>
        <p><label>@Model.showres</label></p>
    </div>
</form>
